{
  "verbose": true,
  "git": {
    "requireCleanWorkingDir": false,
    "commit": false,
    "push": false,
    "tag": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "skipChecks": true,
    "tag": "canary"
  },
  "hooks": {
    "before:init": ["yarn", "yarn clean", "yarn test"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
